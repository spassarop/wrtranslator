{
  "manifest_version": 2,
  "name": "WordReference Translator",
  "version": "1.0",

  "author": "Sebasti√°n Passaro",
  "description": "Firefox extension to allow quick access to www.wordreference.com.",
  "homepage_url": "https://github.com/spassarop/wrtranslator",

  "icons": {
    "48": "icons/wr-icon-48.ico"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["wrtranslator.js"],
      "css": ["wrtranslator.css"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/wr-icon-48.ico",
    "default_title": "WordReference Translator"
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"]
}